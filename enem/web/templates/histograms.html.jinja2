{% extends "layout.html.jinja2" %}

{% block content %}
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <form action="/cities" method="get" accept-charset="utf-8">
            <fieldset>
              <legend>Cidade</legend>
              <div class="form-group">
                <select name="city_code" class="form-control">
                  {% for city in cities %}
                    <option value="{{ city.code }}">{{city.name}}</option>
                  {% endfor %}
                </select>
              </div>
            </fieldset>
          </form>
        </div>
        <div class="col-lg-6">
          <form action="/schools" method="get" accept-charset="utf-8">
            <fieldset>
              <legend>Escola</legend>
              <div class="form-group">
                <input name="school_code" class="form-control">
              </div>
            </fieldset>
          </form>
        </div>
      </div>
    </div>

    <div class="col-lg-12" id="histogram"></div>
{% endblock %}
